{
  "compilerOptions": {
    "jsx": "react-jsx",            // ✅ React 17+ uchun
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": "./src",            // alias `@/` ishlashi uchun (agar kerak bo‘lsa)
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src"]
}
